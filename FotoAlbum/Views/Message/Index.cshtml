@model List<Message>

@{
    ViewData["Title"] = "Index";
}

<div class="px-2 content">
	<div class="glass-dark d-flex align-items-center justify-content-between options-menu w-100 mb-2">
		<div class="d-flex align-items-center h-100">
			<span class="fs-5 ms-3">Messages</span>
		</div>
	</div>

	<div class="index-img-container glass-light row p-3">
		@if (Model.Count == 0)
		{
			<div class="align-self-start mt-3 text-center">
				<span class="alert alert-primary align-self-start text-center">No messages yet.</span>
			</div>
		} else
		{
			<div>
				<table class="table">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">From</th>
							<th scope="col">Text</th>
							<th scope="col"></th>
						</tr>
					</thead>
					<tbody>
						@{int i = 1; }
						@foreach (var item in Model)
						{
							<tr>
								<th scope="row">@(i++)</th>
								<td>@item.Email</td>
								<td>@item.Text</td>
								<td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-dark text-danger"><i class="fa-solid fa-minus"></i></a></td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		}
	</div>
</div>
